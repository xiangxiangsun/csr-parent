<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="css.security.dao.UserDao">
    <select id="findByUserName" resultType="css.security.entity.SysUser">
        select * from public.t_user where username = #{username}
    </select>


<!--    <insert id="add" parameterType="css.security.entity.SysUser" keyProperty="id" useGeneratedKeys="true">-->
<!--        insert into public.t_user (birthday,gender,username,remark,station,telephone)-->
<!--          values (#{birthday},#{gender},#{username},#{remark},#{station},#{telephone})-->
<!--    </insert>    -->

    <insert id="add" keyProperty="user.id" useGeneratedKeys="true">
        insert into public.t_user (birthday,gender,username,remark,station,telephone,password)
          values (#{user.birthday},#{user.gender},#{user.username},#{user.remark},#{user.station},#{user.telephone},#{password})
    </insert>

    <insert id="setUserAndRole" parameterType="hashmap">
        insert into public.t_user_role (user_id,role_id)
            values
            (#{user_id},#{role_id})
    </insert>

    <update id="edit" parameterType="css.security.entity.SysUser">
        update public.t_user
        <set>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="station != null">
                station = #{station},
            </if>
            <if test="telephone != null">
                telephone = #{telephone},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteRoleIdByUserId">
        delete from public.t_user_role where user_id = #{id}
    </delete>

    <delete id="deleteByUserId">
        delete from public.t_user where id = #{id}
    </delete>

    <select id="findPage" parameterType="string" resultType="css.security.entity.SysUser">
        select * from public.t_user
        <if test="queryString!=null and queryString.length>0">
            where username = #{queryString}
        </if>
    </select>

    <select id="findById" resultType="css.security.entity.SysUser">
        select * from public.t_user where id = #{id};
    </select>

    <select id="findRoleIdsByUserId" resultType="java.lang.Integer">
        select role_id from public.t_user_role where user_id = #{id};
    </select>


</mapper>